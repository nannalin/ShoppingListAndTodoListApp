<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#0066FF"
        android:text="Other List"
        android:id="@+id/listLabel3"
        android:layout_centerHorizontal="true" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#E8E8E8"
        android:text=""
        android:id="@+id/autoCompleteTextView3"
        android:width="200dp"
        android:layout_below="@+id/listLabel3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="40dp"
        android:background="#006600"
        android:textColor="#FFFFFF"
        android:text="Add"
        android:id="@+id/addButton3"
        android:onClick="addButtonPressed"
        android:layout_alignTop="@+id/autoCompleteTextView3"
        android:layout_toRightOf="@+id/autoCompleteTextView3"
        android:layout_toEndOf="@+id/autoCompleteTextView3"
        android:layout_alignParentEnd="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/autoCompleteTextView3"
        android:paddingTop="20px"
        android:paddingBottom="20dp"
        android:text=""
        android:id="@+id/textView3"
        android:textColor="#FF0000"
        android:layout_alignParentLeft="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="242dp"
        android:paddingTop="40px"
        android:id="@+id/listView3"
        android:choiceMode="multipleChoice"
        android:textSize="15px"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:transcriptMode="alwaysScroll"
        android:scrollbarFadeDuration="0"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:text="Remove"
        android:visibility="invisible"
        android:textColor="#FFFFFF"
        android:background="#990000"
        android:onClick="removeButtonPressed"
        android:id="@+id/removeButton3"
        android:layout_below="@+id/listView3"
        android:layout_alignRight="@+id/listView3"/>

</RelativeLayout>
